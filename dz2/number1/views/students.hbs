<h1>Students</h1>


{{#if students.length}}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Group</th>
        </tr>
        </thead>
        <tbody>
        {{#each students}}
            <tr>
                <td>{{firstName}}</td>
                <td>{{lastName}}</td>
                <td>{{groupTitle}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
{{else}}
    <p>No students yet</p>
{{/if}}